<% provide :title, page_info[:title] %>
<% provide :h3,    page_info[:h3] %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for user %>
      <h1><%= user.name %></h1>
      <span><%= link_to 'プロフィールをみる', user %></span>
      <span><b>Microposts:</b> <%= user.microposts.count %></span>
    </section>
    <section>
      <%= render partial: 'shared/stats', locals: { user: user } %>
      <% if users.any? %>
      <div class="user_avatars">
      <% users.each do |user| %>
        <%= link_to gravatar_for(user, size: 30), user %>
      <% end %>
      </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= yield(:h3) %></h3>
    <% if users.any? %>
      <ul class="users">
        <%= render users %>
      </ul>
      <%= will_paginate users %>
    <% end %>
  </div>
</div>
