<% provide :title, 'Sign In' %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Eメール" %>
      <%= f.text_field :email %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.submit "サインイン", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "アカウントを作成する", signup_path %></p>
  </div>
</div>