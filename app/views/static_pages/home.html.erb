<% if sign_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>ひとこと投稿フィード</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Railsチュートリアル サンプルアプリケーションへようこそ</h1>

    <h2>
      ここは<%= link_to "Railsチュートリアル", "http://railstutorial.jp/" %>のサンプルアプリケーションのHomeページです。
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), "http://rubyonrails.org/" %>
<% end %>
